dbpath=<%= File.join(node['mongodb']['data_dir'], @nodename) %>

logpath=<%= File.join(node['mongodb']['log_dir'], "#{@nodename}.log") %>

logappend=true

port = <%= @port %>
<% if node['mongodb']['log_verbose'] %>
verbose = v
<% end %>
cpu = <%= node['mongodb']['config']['log_cpu'] %>
<% if node['mongodb']['enable_rest'] %>
rest = true
httpinterface = true
<% end %>
jsonp = <%= node['mongodb']['config']['enable_jsonp'] %>
shardsvr = <%= node['mongodb']['config']['enable_shardsvr'] %>
configsvr = <%= node['mongodb']['config']['enable_configsvr'] %>
pidfilepath=/var/run/mongodb/<%= @nodename %>.pid
oplogSize=<%= node['mongodb']['config']['oplogSize'] %>
nojournal = <%= node['mongodb']['config']['enable_nojournal'] %> 
directoryperdb = <%=node['mongodb']['config']['enable_directoryperdb'] %> 


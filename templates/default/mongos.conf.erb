configdb=<%= node['mongodb']['router']['configdb'].join(",") %>
port = <%= @port %>

#where to log
logpath=<%= node['mongodb']['log_dir'] %>/<%= @nodename %>.log
logappend=true
<% if node['mongodb']['log_verbose'] %>
verbose = v
<% end %>

pidfilepath=/var/run/mongodb/<%= @nodename %>.pid

